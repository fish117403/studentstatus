<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    tools:context=".ScoreActivity" >
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/forecolor" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/default_distance"
            android:src="@drawable/backbtu" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/chengji"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_1" />

        
    </RelativeLayout>
    <LinearLayout 
         android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/default_distance"
        android:paddingBottom="@dimen/default_distance"
        android:background="@color/backgroundcolor"
        >
        <TextView 
            android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:text="当前查看"
        android:textSize="16sp"
        android:layout_marginRight="@dimen/little_distance"
        android:textColor="@color/black"
            />
        <TextView 
            android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:text="“"
        android:textSize="@dimen/textsize_zhengwen"
        android:textColor="@android:color/holo_red_dark"
            />
         <TextView 
            android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="三年级二班"
        android:textSize="@dimen/textsize_zhengwen"
        android:layout_marginRight="@dimen/little_distance"
        android:textColor="@android:color/holo_red_dark"
            />
          <TextView 
            android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="航小米"
        android:textSize="@dimen/textsize_zhengwen"
        android:textColor="@android:color/holo_red_dark"
            />
           <TextView 
            android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:text="“"
        android:textSize="@dimen/textsize_zhengwen"
        android:textColor="@android:color/holo_red_dark"
            />
        <TextView 
            android:layout_width="wrap_content"  
        android:layout_height="wrap_content"
        android:text="的成绩单"
        android:layout_marginLeft="@dimen/little_distance"
        android:textSize="@dimen/textsize_zhengwen"
        android:textColor="@color/black"
            />
        </LinearLayout>
   <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_score"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"
        >  
    <ListView 
        android:id="@+id/list_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cacheColorHint="#000000"
        android:dividerHeight="1dp"
        android:divider="@color/backgroundcolor"
        ></ListView>
  </android.support.v4.widget.SwipeRefreshLayout>  
</LinearLayout>
