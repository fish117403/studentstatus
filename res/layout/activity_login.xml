<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor" >
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/login_name" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/myadvice_edittext_shape"
        android:layout_marginLeft="@dimen/big_distance"
        android:layout_marginRight="@dimen/big_distance"
        android:layout_marginTop="200dp"
        android:hint="请输入账号"
        android:textSize="16sp"
        android:singleLine="true"
        android:gravity="center"/>
    <EditText
        android:id="@+id/login_pws" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/myadvice_edittext_shape"
        android:layout_marginLeft="@dimen/big_distance"
        android:layout_marginRight="@dimen/big_distance"
        android:layout_marginTop="1px"
        android:layout_centerInParent="true"
        android:hint="请输入登录密码"
        android:textSize="16sp"
        android:singleLine="true"
        android:gravity="center"
        android:layout_below="@+id/login_name"/>
    <Button
        android:id="@+id/login_login" 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="@dimen/big_distance"
        android:layout_marginRight="@dimen/big_distance"
        android:layout_marginTop="@dimen/big_distance"
        android:layout_below="@+id/login_pws"
        android:text="登 录"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"/>
    <RelativeLayout
        android:id="@+id/login_rel" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_login"
        android:layout_margin="@dimen/big_distance">
        <View 
            android:layout_width="70dp"
            android:layout_height="1px"
            android:background="@color/sizecolor"
            android:layout_centerVertical="true"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方账号登录"
            android:textColor="@color/sizecolor" 
            android:layout_centerInParent="true"/>
        <View 
            android:layout_width="70dp"
            android:layout_height="1px"
            android:background="@color/sizecolor"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_rel"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="@dimen/big_distance">
        <ImageView
            android:id="@+id/login_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/weixin"/>
        <TextView
            android:id="@+id/login_forgetPWS" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="@color/sizecolor"
            android:layout_below="@+id/login_weixin"
            android:layout_marginTop="@dimen/little_distance"
            android:padding="@dimen/little_distance"/>
        <TextView
            android:id="@+id/login_regist" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@color/forecolor"
            android:layout_alignTop="@+id/login_forgetPWS"
            android:layout_alignParentRight="true"
            android:padding="@dimen/little_distance"/>
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还没账号？"
            android:textColor="@color/sizecolor"
            android:layout_toLeftOf="@+id/login_regist"
            android:layout_alignTop="@+id/login_forgetPWS"
            android:padding="@dimen/little_distance"/>
    </RelativeLayout>

</RelativeLayout>
